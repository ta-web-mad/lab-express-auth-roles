<div class="container mt-5">
    <h1>Todos los cursos</h1>
    <div class="container mt-2">
        <div class="row justify-content-center">
            <div class="col-6 mt-3">
                <div class="card-body">
                    <img src="{{courseImg}}" class="card-img-top" alt={{title}}>
                    <div class="card-body">
                        <h2 class="card-title">{{title}}</h2>
                        <p>Descripción: {{description}}</p>
                        {{#each leadTeacher}}
                        <p>Profesor: {{this.username}}</p>
                        {{/each}}
                        <p>Teacher assistant:</p>
                        {{#each ta}}
                        <ul>
                            <li>{{this.username}}</li>
                        </ul>
                        {{/each}}
                        <p>Dia de comienzo: {{startDate}}</p>
                        <p>Dia de finalización: {{endDate}}</p>
                        <p>Estudiantes:</p>
                        {{#each students}}
                        <ul>
                            <li>{{this.username}}</li>
                        </ul>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a href="/courses/all-courses" class="btn btn-dark btn-lg mb-4 mt-1">Volver a cursos</a>
</div>