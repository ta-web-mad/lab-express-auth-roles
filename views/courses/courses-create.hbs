<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Nuevo Curso</h1>
            <hr>

            <form action="/courses-create" method="POST">

                <div class="mb-3 row">
                    <div class="col">
                        <label for="titleInput" class="form-label">Titulo:</label>
                        <input type="text" class="form-control" id="titleInput" name="title">

                    </div>
                </div>
                <div class="mb-3">
                    <label for="leadTeacher" class="form-label">Lead teacher:</label>
                    <select class="form-select" multiple name="User">
                        {{#each pms}}
                        <option value="{{_id}}">{{username}}</option>
                        {{/each}}
                    </select>
                </div>

                <div class="mb-3">
                    <label for="startDate" class="form-label">Fecha de inicio:</label>
                    <input type="date" class="form-control" id="startDate" name="startDate">
                </div>

                <div class="mb-3">
                    <label for="endDate" class="form-label">Fecha de finalizacion:</label>
                    <input type="date" class="form-control" id="endDate" name="endDate">
                </div>
                <div class="mb-3">
                    <label for="ta" class="form-label">TA:</label>
                    <select class="form-select" multiple name="ta">
                        {{#each tas}}
                        <option value="{{_id}}">{{username}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="mb-3">
                    <label for="courseImg" class="form-label">Imagen de curso:</label>
                    <input type="url" class="form-control" id="courseImg" name="courseImg">
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Descripcion:</label>
                    <input type="text" class="form-control" id="description" name="description">
                </div>
                <div class="mb-3">
                    <label for="status" class="form-label">TA:</label>
                    <select class="form-select" multiple name="status">
                        <option value="ON">ON</option>
                        <option value="OFF">OFF</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="students" class="form-label">Estudiantes:</label>
                    <select class="form-select" multiple name="students">
                        {{#each students}}
                        <option value="{{_id}}">{{username}}</option>
                        {{/each}}
                    </select>
                </div>



                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Completar registro</button>
                </div>

                {{#if errorMessage}}
                <div id="errorMessage">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}

            </form>
        </div>
    </div>

</div>