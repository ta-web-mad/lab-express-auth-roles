<div class="container">

    <div class="row justify-content-center">
        <div class="col-6">

        <h2>Crear Curso</h2>

        <hr>

        <form method="POST" action="/cursos/crear/">
            <div class="form-group">
                <label for="title">Título</label>
                <input type="text" class="form-control" id="title" name="title">
            </div>

            <div class="form-group">
                <label for="leadTeacher">Profesor titular</label>
                    <select class="form-control" id="leadTeacher" name="leadTeacher" multiple>

                    {{#each courseInfo.teachers}}
                        <option value="{{_id}}">{{username}}</option>
                    {{/each}}

                </select>

            </div>

            <div class="form-group">
                <label for="startDate">Fecha inicio</label>
                <input type="date" class="form-control" id="startDate" name="startDate">
            </div>

            <div class="form-group">
                <label for="endDate">Fecha finalización</label>
                <input type="date" class="form-control" id="endDate" name="endDate">
            </div>

            <div class="form-group">
                <label for="ta">Teacher Assistant</label>
                <select class="form-control" id="ta" name="ta" multiple>

                    {{#each courseInfo.tas}}
                        <option value="{{_id}}">{{username}}</option>
                    {{/each}}

                </select>
            </div>

            <div class="form-group">
                <label for="courseImg">Imagen del curso</label>
                <input type="text" class="form-control" id="courseImg" name="courseImg">
            </div>

            <div class="form-group">
                <label for="description">Descripción</label>
                <input type="text" class="form-control" id="description" name="description">
            </div>

            <div class="form-group">
                <label for="status">Status</label>
                    <select class="form-control" id="status" name="status">
            
                        <option value="ON">ON</option>
                        <option value="OFF">OFF</option>

                    </select>
            </div>

            <div class="form-group">
                <label for="students">Estudiantes</label>

                    <select class="form-control" id="students" name="students" multiple>
            
                    {{#each courseInfo.students}}
                        <option value="{{_id}}">{{username}}</option>
                    {{/each}}

                    </select>    
            </div>

            <br>

            <button type="submit" class="btn btn-dark">Confirmar</button>
        </form>

        <br>

        </div>
    </div>
</div>