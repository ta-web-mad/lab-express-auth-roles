<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Crear Curso</h1>
            <hr>

            <form action="/registro" method="POST">

                <div class="mb-3 row">

                    <div class="mb-3">
                        <label for="title" class="form-label">Nombre del curso</label>
                        <input type="text" class="form-control" id="usernameInput" name="title">
                    </div>

                    <div class="mb-3">
                        <label for="leadTeacher" class="form-label">Nombre del profesor</label>
                        <input type="text" class="form-control" id="usernameInput" name="title">
                    </div>

                    <div class="mb-3">
                        <label for="startDate" class="form-label">Fecha de inicio</label>
                        <input type="date" class="form-control" id="usernameInput" name="startDate">
                    </div>

                    <div class="mb-3">
                        <label for="endDate" class="form-label">Final del curso</label>
                        <input type="date" class="form-control" id="usernameInput" name="endDate">
                    </div>

                    <div class="mb-3">
                        <label for="ta" class="form-label">TAs</label>
                        <input type="text" class="form-control" id="usernameInput" name="ta">
                    </div>

                    <div class="mb-3">
                        <label for="courseImg" class="form-label">Imagen del curso</label>
                        <input type="text" class="form-control" id="usernameInput" name="courseImg">
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Descripción</label>
                        <input type="text" class="form-control" id="usernameInput" name="description">
                    </div>

                    <div class="mb-3">
                        <label for="status" class="form-label">Estado</label>
                        <input type="text" class="form-control" id="usernameInput" name="status">
                    </div>

                    <div class="mb-3">
                        <label for="students" class="form-label">Estudiantes</label>
                        <input type="text" class="form-control" id="usernameInput" name="students">
                    </div>



                    <div class="mb-3">
                        <label for="imageInput" class="form-label">Imagen</label>
                        <input type="url" class="form-control" id="imageInput" name="profileImg">
                        <div class="form-text">Introduce la URL a la imagen que desees de perfil.</div>
                    </div>

                    <div class="mb-3">
                        <label for="descriptionInput" class="form-label">Descripción</label>
                        <textarea class="form-control" id="descriptionInput" rows="3" name="description"></textarea>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-dark block">Completar registro</button>
                    </div>

                    {{#if errorMessage}}
                    <div id="errorMessage">
                        <p>{{errorMessage}}</p>
                    </div>
                    {{/if}}

            </form>
        </div>
    </div>

</div>