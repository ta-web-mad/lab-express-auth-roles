<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Create Course</h1>
            <hr>

            <form action="/courses/{{old.id}}/edit" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title" value="{{old.title}}">
                </div>

                <div class="mb-3">
                    <label for="leadTeacher" class="form-label">Lead teacher</label>
                    <select multiple class="form-select" aria-label="Default select example" id="leadTeacher"
                        name="leadTeacher">
                        {{#each devs}}
                        <option value="{{id}}">{{username}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="mb-3">
                    <label for="startDate" class="form-label">Start Date</label>
                    <input type="date" class="form-control" id="startDate" name="startDate" value="{{date.start}}">
                </div>

                <div class="mb-3">
                    <label for="endDate" class="form-label">End Date</label>
                    <input type="date" class="form-control" id="endDate" name="endDate" value="{{date.end}}">
                </div>

                <div class="mb-3">
                    <label for="ta" class="form-label">Teacher Assistants</label>
                    <select multiple class="form-select" aria-label="Default select example" id="ta" name="ta">
                        {{#each ta}}
                        <option value="{{id}}">{{username}}</option>
                        {{/each}}
                    </select>
                </div>

                <div class="mb-3">
                    <label for="courseImg" class="form-label">Image</label>
                    <input type="url" class="form-control" id="courseImg" name="courseImg" value="{{old.courseImg}}">
                    <div class="form-text">Introduce la URL a la imagen que desees de Curso.</div>
                </div>

                <div class="mb-3">
                    <label for="descriptionInput" class="form-label">Descripci√≥n</label>
                    <textarea class="form-control" id="descriptionInput" rows="3"
                        name="description">{{old.description}}</textarea>
                </div>



                <div class="mb-3">
                    <label for="status" class="form-label">Status</label>
                    <select class="form-select" aria-label="Default select example" name="status" id="status">
                        <option value="ON" selected>Running</option>
                        <option value="OFF">Stoped</option>

                    </select>
                </div>

                <div class="mb-3">
                    <label for="students" class="form-label">Students</label>
                    <select multiple class="form-select" aria-label="Default select example" id="students"
                        name="students">
                        {{#each students}}
                        <option value="{{id}}">{{username}}</option>
                        {{/each}}
                    </select>
                </div>

                <br>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Acceder</button>
                </div>

                <br>
                {{#if errorMessage}}
                <div id="errorMessage">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}

            </form>
        </div>
    </div>

</div>