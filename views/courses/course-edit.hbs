<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Edit {{title}}</h1>
            <hr>

            <form action="/courses/edit/:course_id" method="POST">

                <div class="mb-3 row">
                    <div class="col">
                        <label for="title" class="form-label">Título</label>
                        <input type="title" class="form-control" id="title" name="title" value="{{title}}">
                        <div class="form-text">Requerido.</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="white-text mb-3" for="leadTeacher" class="form-label">Lead Teacher:</label>

                    <div class="mb-3">
                        <select class="form-select form-select-lg" name="leadTeacher" id="leadTeacher">
                            <option disabled selected>Seleccionar Lead Teacher...</option>

                            {{#each course.leadTeacher}}
                            <option value={{this.id}}>{{this.username}}</option>
                            {{/each}}

                        </select>
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col">
                        <div class="mb-3">
                            <label for="startDate" class="form-label">Start Date</label>
                            <input type="date" class="form-control" id="startDate" name="startDate"
                                value="{{startDate}}">
                        </div>
                    </div>

                    <div class="col">
                        <div class="mb-3">
                            <label for="endDate" class="form-label">End Date</label>
                            <input type="date" class="form-control" id="endDate" name="endDate" value="{{endDate}}">
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="white-text mb-3" for="ta" class="form-label">TA:</label>

                    <div class="mb-3">
                        <select class="form-select form-select-lg" name="ta" id="ta">
                            <option disabled selected>Seleccionar TA...</option>

                            {{#each ta}}
                            <option value={{id}}>{{username}}</option>

                            {{/each}}

                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="courseImg" class="form-label">Imagen</label>
                    <input type="url" class="form-control" id="courseImg" name="courseImg" value="{{courseImg}}">
                    <div class="form-text">Introduce la URL a la imagen que desees.</div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Descripción</label>
                    <textarea class="form-control" id="description" rows="3"
                        name="description">{{description}}</textarea>
                </div>

                <div class="mb-3">
                    <label class="white-text mb-3" for="status" class="form-label">Status:</label>

                    <div class="mb-3">
                        <select class="form-select form-select-lg" name="status" id="status">
                            <option disabled>Seleccionar Status...</option>
                            <option default value="ON">ON</option>
                            <option value="OFF">OFF</option>
                        </select>
                    </div>
                </div>


                <div class="mb-3">
                    <label class="white-text mb-3" for="students" class="form-label">Students:</label>

                    <div class="mb-3">
                        <select class="form-select form-select-lg" name="students" id="students" multiple>
                            <option disabled selected>Seleccionar Students...</option>

                            {{#each student}}
                            <option value={{id}}>{{username}}</option>

                            {{/each}}

                        </select>
                    </div>
                </div>

                <div>
                    <input type="hidden" name="course_id" value="{{_id}}">
                </div>

                <div class="d-grid gap-2 mb-4">
                    <button type="submit" class="btn btn-dark block">Update</button>
                </div>

                {{#if errorMessage}}
                <div id="errorMessage">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}

            </form>
        </div>
    </div>

</div>