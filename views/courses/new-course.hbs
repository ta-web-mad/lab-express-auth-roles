<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Crear nuevo curso</h1>

            <hr>

            <form action="/courses/create" method="POST">

                <div class="mb-3">
                    <label for="title" class="form-label">Titulo</label>
                    <input type="text" class="form-control" id="title" name="title">
                </div>
                <div class="mb-3">
                    <label for="leadTeacher" class="form-label">Lead Teacher</label>
                    <select id="leadTeacher" class="form-select" name="leadTeacher" multiple>
                        {{#each users}}
                        <option value="{{_id}}">{{username}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="mb-3">
                    <label for="startDate" class="form-label">Fecha de inicio</label>
                    <input type="text" class="form-control" id="startDate" name="startDate">
                </div>
                <div class="mb-3">
                    <label for="endDate" class="form-label">Fecha de finalización</label>
                    <input type="text" class="form-control" id="endDate" name="endDate">
                </div>
                <div class="mb-3">
                    <label for="ta" class="form-label">TA's</label>
                    <select id="ta" class="form-select" name="ta" multiple>
                        {{#each users}}
                        <option value="{{_id}}">{{username}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="mb-3">
                    <label for="courseImg" class="form-label">Imagen</label>
                    <input type="text" class="form-control" id="courseImg" name="courseImg">
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Descripción</label>
                    <input type="text" class="form-control" id="description" name="description">
                </div>
                <div class="mb-3">
                    <label for="status" class="form-label">Estado</label>
                    <input type="text" class="form-control" id="status" name="status">
                </div>
                <div class="mb-3">
                    <label for="students" class="form-label">Estudiantes</label>
                    <select id="students" class="form-select" name="students" multiple>
                        {{#each users}}
                        <option value="{{_id}}">{{username}}</option>
                        {{/each}}
                    </select>
                </div>

                <button type="submit" class="btn btn-dark">Crear nuevo curso</button>
                <a href="/" class="btn btn-dark">Volver al inicio</a>
            </form>


            <hr>


        </div>
    </div>


</div>