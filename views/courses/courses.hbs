{{#each course}}
<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        {{!-- <div class="col-md-4">
            <img src="{{profileImg}}" class="img-fluid rounded-start" alt="...">
        </div> --}}
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <p class="card-text">{{leadTeacher}}</p>
                <p class="card-text">{{students}}</p>
                <p class="card-text"><small class="text-muted">{{status}}</small></p>
                <a href="/course/{{id}}">Ver Curso</a>
                {{#if ../isTA}}
                <a href="/course/{{id}}/edit" class="btn btn-primary">Editar</a>
                <a href="/course/{{id}}/delete" class="btn btn-primary">Eliminar</a>
                {{/if}}
            </div>
        </div>
    </div>
</div>
{{/each}}