<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            {{#if isTA}}
            <p><a class="btn btn-success" href="/cursos/crear">Crear curso</a></p>
            {{/if}}
            <table class="table table-striped table-secondary text-center">
                <div class="container">
                    {{#each courses}}
                    <tr>
                        <td>
                            <p>{{title}}</p>
                        </td>
                        <td>
                            <a class="btn btn-light" href="/cursos/{{_id}}">Ver curso</a>
                        </td>
                    </tr>
                    {{/each}}
            </table>
        </div>
    </div>
</div>