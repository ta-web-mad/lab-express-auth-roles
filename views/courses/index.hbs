<div class="container">
    <div class="row d-flex flex-row align-items-center justify-content-center">
        <div class="col-12 d-flex flex-row align-items-center justify-content-center">
            <h1 class="col-4">COURSES INDEX</h1>
            {{#if isTa}}
            <a href="/courses/create" class="btn btn-info col-4">Create new course</a>
            {{/if}}
        </div>
        {{#each courses}}
        <div class="card text-center col-4 m-2">
            <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <p class="card-text">Start date: {{startDate}}</p>
                <p class="card-text">End date:{{endDate}}</p>
                <a href="/courses/{{_id}}" class="btn btn-primary">More</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>