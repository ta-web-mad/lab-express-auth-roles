<div class="container">
    <h1> List of Students </h1>
    {{#each student}}

    <table class="table">
        <thead>
            <tr>
                <th scope="col" class="nameStudents">{{username}}</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">Email</th>
                <td> {{email}} </td>
            </tr>
            <tr>
                <th scope="row"> Role</th>
                <td> {{role}} </td>
            </tr>
        </tbody>

    </table>

    <a href="/student/{{_id}}" class="btn btn-warning btn-sm"> View profile </a>
    <hr>
    {{!-- {{#if isAdmin}} --}}
    <td>
        <a href="/student/editar/{{_id}}" class="btn btn-warning btn-sm"> Edit </a>
    </td>
    <form action="/student/eliminar/{{_id}}" method="POST">

        <input type="submit" value="Delete" class="btn btn-danger btn-sm">
    </form>
    {{!-- {{/if}} --}}

    {{!-- {{#if isOwner}} --}}
    {{!-- {{/if}} --}}

    {{/each}}

</div>