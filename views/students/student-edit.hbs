<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Editar {{student.username}}</h1>

            <form action="/students/edit?id={{student._id}}" method="POST">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="text" class="form-control" id="email" name="email" value="{{student.email}}">
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Descripci√≥n</label>
                    <input type="text" class="form-control" id="description" name="description"
                        value="{{student.description}}">
                </div>
                {{#if isPM}}
                <div class="mb-3">

                    <label for="role" class="form-label">Role</label>
                    <select class="form-select" name="role">
                        <option value="STUDENT">STUDENT</option>
                        <option value="TA">TA</option>
                        <option value="DEV">DEV</option>
                    </select>
                </div>
                {{/if}}

                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Editar Alumno</button>
                </div>

            </form>

            <hr>
        </div>
    </div>



    <a href="/" class="btn btn-dark">Volver al inicio</a>
</div