<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Registro</h1>
            <hr>

            <form action="/students/{{_id}}/edit" method="POST">

                <div class="mb-3 row">
                    <div class="mb-3">
                        <label for="usernameInput" class="form-label">User Name</label>
                        <input type="text" class="form-control" id="usernameInput" name="username" value="{{username}}">
                    </div>

                    <div class="col">
                        <label for="emailInput" class="form-label"></label>
                        <input type="email" class="form-control" id="emailInput" name="email" value="{{email}}">
                        <div class="form-text">Requerido.</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="imageInput" class="form-label">Imagen</label>
                    <input type="url" class="form-control" id="imageInput" name="profileImg" value="{{profileImg}}">
                    <div class="form-text">Introduce la URL a la imagen que desees de perfil.</div>
                </div>

                <div class="mb-3">
                    <label for="descriptionInput" class="form-label">Descripci√≥n</label>
                    <textarea class="form-control" id="descriptionInput" rows="3" name="description"
                        placeholder="{{description}}"></textarea>
                </div>

                <div class="d-grid">
                    <input type="submit" class="btn btn-dark" value="Save Edit">
                </div>


                {{#if errorMessage}}
                <div id="errorMessage">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}

            </form>
        </div>
    </div>
</div>