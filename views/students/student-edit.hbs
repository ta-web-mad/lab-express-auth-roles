<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>EDITAR</h1>


            <form action="/students/{{id}}/edit" method="POST">

                <div class="mb-3 row">
                    <div class="col">
                        <label for="emailInput" class="form-label">Dirección de email</label>
                        <input type="email" class="form-control" id="emailInput" name="email" value="{{email}}">

                    </div>

                    <div class="mb-3">
                        <label for="usernameInput" class="form-label">Nombre de usuario</label>
                        <input type="text" class="form-control" id="usernameInput" name="username" value="{{username}}">

                    </div>

                    <div class="mb-3">
                        <label for="imageInput" class="form-label">Imagen</label>
                        <input type="url" class="form-control" id="imageInput" name="profileImg" name="{{profileImg}}">
                    </div>

                    <div class="mb-3">
                        <label for="descriptionInput" class="form-label">Descripción</label>
                        <input type="text" class="form-control" id="descriptionInput" name="description"
                            value="{{description}}">
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-dark block">Guardar cambios</button>
                    </div>

            </form>
        </div>
    </div>

</div>