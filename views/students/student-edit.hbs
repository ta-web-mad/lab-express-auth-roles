<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Edici칩n del estudiante</h1>
            <hr>

            <form action="/editar-estudiante/{{_id}}" method="POST">

                <div class="mb-3 row">
                    <div class="col">
                        <label for="emailInput" class="form-label">Direcci칩n de email</label>
                        <input type="email" class="form-control" id="emailInput" name="email" value="{{email}}">

                    </div>
                    <div class="col">
                        <label for="pwdInput" class="form-label">Contrase침a</label>
                        <input type="password" class="form-control" id="pwdInput" name="userPwd" value="">
                        <div class="form-text">Requerido.</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="usernameInput" class="form-label">Nombre de usuario</label>
                    <input type="text" class="form-control" id="usernameInput" name="username" value="{{username}}">
                </div>

                <div class="mb-3">
                    <label for="imageInput" class="form-label">Imagen</label>
                    <input type="url" class="form-control" id="imageInput" name="profileImg" value="{{profileImg}}">
                    <div class="form-text">Introduce la URL a la imagen.</div>
                </div>

                <div class="mb-3">
                    <label for="descriptionInput" class="form-label">Descripci칩n</label>
                    <textarea class="form-control" id="descriptionInput" rows="3" name="description"
                        value="{{description}}"></textarea>
                </div>


                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Completar registro</button>
                </div>

                {{#if errorMessage}}
                <div id="errorMessage">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}

            </form>

            <form action="/change-estudiante/{{_id}}" method="POST">
                <input type="submit" value="TA" class="btn btn-warning btn-sm" name="role">
                <input type="submit" value="DEV" class="btn btn-warning btn-sm" name="role">

            </form>
        </div>
    </div>

</div>