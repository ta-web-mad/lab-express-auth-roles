<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Edit</h1>
            <hr>

            <form action="/students/{{id}}/edit" method="POST">

                <div class="mb-3">
                    <label for="usernameInput" class="form-label">Nombre de usuario</label>
                    <input type="text" class="form-control" id="usernameInput" name="username" value={{username}}>
                </div>

                <div class="mb-3">
                    <label for="roleInput" class="form-label">Role</label>
                    <input type="text" class="form-control" id="usernameInput" name="role" value={{role}}>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Submit</button>
                </div>

                {{#if errorMessage}}
                <div id="errorMessage">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}

            </form>
        </div>
    </div>

</div>