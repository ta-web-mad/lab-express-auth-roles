<div class="row justify-content-center">

    <div class="col-md-6">

        <h1>Edit {{username}} Profile </h1>
        <hr>

        <form action="/students/edit/{{id}}" method="POST">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" id="username" name="username" value="{{username}}">
            </div>
            <div class="mb-3">
                <label for="emailInput" class="form-label">Email</label>
                <input type="email" class="form-control" id="emailInput" name="email" value="{{email}}">
            </div>
            <div class="mb-3">
                <label for="imageInput" class="form-label">Imagen</label>
                <input type="url" class="form-control" id="imageInput" name="profileImg" value="{{profileImg}}">
                <div class="form-text">Introduce la URL a la imagen que desees de perfil.</div>
            </div>
            <div class="mb-3">
                <label for="descriptionInput" class="form-label">Description</label>
                <textarea class="form-control" id="descriptionInput" rows="3"
                    name="description">{{description}}</textarea>
            </div>


            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-dark block">Edit</button>
            </div>
        </form>
    </div>
</div>