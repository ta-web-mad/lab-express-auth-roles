<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Editar {{username}}</h1>
            <hr>

            <form action="/students/edit/{{id}}" method="POST">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control" id="username" name="username" value="{{username}}">
                </div>

                <div class="mb-3">
                    <label for="profileImg" class="form-label">Profile Image</label>
                    <input type="img" class="form-control" id="profileImg" name="profileImg" value="{{profileImg}}">
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">email</label>
                    <input type="text" class="form-control" id="email" name="email" value="{{email}}">
                </div>

                <div class="mb-3">
                    <label for="author" class="form-label">Description</label>
                    <input type="text" class="form-control" id="author" name="author" value="{{description}}">
                </div>

                <input type="hidden" name="_id" value="{{id}}">

                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-dark btn-lg">Save</button>
                </div>

            </form>
        </div>
    </div>
</div>