<h2>Edit {{username}} Profile</h2>


<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="/students/{{_id}}/edit" method="POST">

                <div class="mb-3">
                    <label for="username" class="form-label">User Name</label>
                    <input type="text" class="form-control" name="username" value="{{username}}">
                </div>


                <div class="mb-3">
                    <label for="email" class="form-label">e-mail</label>
                    <input type="text" class="form-control" name="email" value="{{email}}">
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <input type="text" class="form-control" name="description" value="{{description}}">
                </div>


                {{!-- <div class="mb-3">
                    <label for="profileImg" class="form-label">Profile Image</label>
                    <input type="image" class="form-control" name="description" value="{{description}}">
                </div> --}}


                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Update Student</button>
                </div>

            </form>