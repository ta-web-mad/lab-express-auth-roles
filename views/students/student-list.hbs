<div class="container">

    <h2>Lista de Estudiantes</h2>

    <hr>

    <table class="table">

        <thead class="thead-dark text-center">
            <tr>
            <th scope="col">Username</th>
            <th scope="col">Nombre</th>
            <th scope="col">Detalles</th>
            </tr>
        </thead>

        <tbody class="text-center">
            
            {{#each students}}

                <tr>
                    <td> {{username}} </td>
                    <td> {{name}} </td>
                    <td><a href="/estudiantes/detalles/{{id}}" type="button" class="btn btn-dark">Ver detalles</a></td>
                </tr>

            {{/each}} 
        
        </tbody>

    </table>

</div>