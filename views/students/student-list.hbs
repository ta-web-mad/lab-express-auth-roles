<div class="container">
    <div class="row justify-content-center">
        <table class="table mb-0 align-middle bg-white">
            <thead class="bg-light">
                <tr>
                    <th>Usuario</th>
                    <th>Descripci√≥n</th>
                    {{#if isPM}}
                    <th>Rol</th>
                    {{/if}}
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each students}}
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="{{profileImg}}" alt="" style="width: 60px; height:50px" class="rounded-circle" />
                            <div class="ms-3">
                                <p class="fw-bold mb-1">{{username}}</p>
                                <p class="text-muted mb-0">{{email}}</p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <span>{{description}}<span>
                    </td>
                    {{#if ../isPM}}
                    <td>
                        {{role}}
                    </td>
                    {{/if}}
                    <td>
                        <a href="/students/{{_id}}" class="btn btn-dark btn-sm btn-rounded">
                            Ver perfil
                        </a>
                        {{#if ../isPM}}
                        <a href="/students/{{_id}}/edit" class="btn btn-dark btn-sm btn-rounded">
                            Editar
                        </a>
                        <form action="/students/{{_id}}/delete" method="post" class="d-inline">
                            <input type="submit" class="btn btn-dark btn-sm btn-rounded" value="Eliminar">
                        </form>
                        {{/if}}
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{#if errorMessage}}
    <div id="errorMessage">
        <p>{{errorMessage}}</p>
    </div>
    {{/if}}
</div>