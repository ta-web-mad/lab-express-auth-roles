<div class=" container">
    <h2 class="title">Students</h2>
    <hr>
    <div class="row">

        {{#each student}}

        <div class="col-md-4 d-flex align-items-stretch">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">{{username}}</h5>
                    <img src="{{profileImg}}" class="card-img-top" alt="{{username}}">
                    <p>{{email}}</p>
                    <p>{{role}}</p>
                    <p>{{description}}</p>
                    <a href="/students/{{_id}}" class="btn btn-dark btn-sm">View Student Profile</a>
                    <br>
                    <br>
                    {{!-- {{#if ../isPM}}
                    <br>
                    <br>
                    <form action="/delete/{{_id}}" method="POST">
                        <input type="submit" value="Delete" class="btn btn-danger btn-sm">
                    </form>
                    {{/if}} --}}
                </div>
            </div>
        </div>


        {{/each}}

    </div>
</div>