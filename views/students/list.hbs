
<h2>Students list</h2>

<ul class="list-group mt-4">

    {{#each user.student}}

      <div class="row">

        <li class="list-group-item d-flex align-items-center bg-list-color">

          <div class="col-md-5 pt-2">
            <h4>{{username}}</h4>
            <p>{{email}}</p>          
          </div>

            <div class="col-md-2 me-3">
              {{#if ../isPM}}
                  <a href="/students/details/{{_id}}/edit" type="button" class="btn btn-warning w-100">Edit profile</a>
              {{/if}}
              

            </div>

            <div class="col-md-2 me-3">   
              {{#if ../isPM}}
                <form action="/students/list/{{_id}}/delete" method="POST" style="display: inline">
                <input type="submit" value="Delete profile" class="btn btn-danger w-100">
                </form>            
              {{/if}}
          </div>

          <div class="col-md-2 me-3">
              <a href="/students/details/{{_id}}" type="button" class="btn btn-dark w-100">View student profile</a>
          </div>


