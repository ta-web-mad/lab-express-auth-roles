<h1>Edit Profile</h1>

<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-8">

            <form action="/students/{{_id}}/edit" method="POST">

                <div class="mb-3">

                    <label for="field1" class="form-label">Username</label>
                    <input type="text" class="form-control" id="field1" name="username" value="{{username}}">


                </div>

                <div class="mb-3">

                    <label for="field2" class="form-label">E-mail</label>
                    <input type="text" class="form-control" id="field2" name="email" value="{{email}}">

                </div>

                <div class="mb-3">

                    <label for="field3" class="form-label">Profile image</label>
                    <input type="text" class="form-control" id="field3" name="maxSpeed" value="{{profileImg}}">

                </div>

                <div class="mb-3">

                    <label for="field3" class="form-label">Description</label>
                    <input type="text" class="form-control" id="field3" name="maxSpeed" value="{{description}}">

                </div>


                <div class="d-grid">

                    <button type="submit" class="btn btn-dark">Save updates</button>

                </div>
            </form>

        </div>
    </div>

</div>