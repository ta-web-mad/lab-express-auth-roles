<div class="container">

    <h2>Student Profile</h2>

    <div class="row">

        <div class=" card col-4">

            <img class="card-img-top " src="{{users.profileImg}}" alt="Card image cap">
        </div>

        <div class=" card col-4" style="color: black;">
            <h4 class="card-title"><strong>{{ users.username }}</strong></h4>

            <h5 class="card-title"><strong>Email: </strong>{{ users.email }}</h5>
            <hr>
            <h5 class="card-title"><strong>Description: </strong>{{ users.description }}</h5>
            <hr>
            <h5 class="card-title"><strong>Puesto/Cargo: </strong>{{ users.role }}</h5>
            <hr>
            <a href="/students" class="btn btn-lg btn-success">Return</a>
            <hr>

        </div>

    </div>
    {{#if userRole.isSTU}}

    <a href="/students/edit/{{users.id}}" class="btn btn-lg btn-info">Editar mi perfil</a>
    <hr>
    {{/if}}


    {{#if userRole.isPM}}
    <div>

        <a href="/students/edit/{{users.id}}" class="btn btn-lg btn-danger">Editar</a>

        <form action="/students/delete/{{users.id}}" method="POST" style="display: inline">
            <input type="submit" value="Eliminar" class="btn btn-lg btn-dark"
                onclick="return confirm('Are you sure you want to delete this Student?')">
        </form>
        <hr>
    </div>
    <div>
        <form action="/students/editRoleDev/{{users.id}}" method="POST" style="display: inline">
            <input type="submit" value="Mark as Developer" class="btn btn-lg btn-dark">
        </form>

        <form action="/students/editRoleTA/{{users.id}}" method="POST" style="display: inline">
            <input type="submit" value="Mark as TA" class="btn btn-lg btn-dark">
    </div>

    </form>

    {{/if}}



</div>