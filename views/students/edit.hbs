<div class="container">
    <div class="row justify-content-center">

        <div class="col-md-6">
            <h1>Editar Estudiante</h1>
            <hr>
            <form action="/students/edit/{{student._id}}" method="POST">

                <div class="mb-3 row">
                    <div class="col">
                        <label for="email" class="form-label">Dirección de email</label>
                        <input type="email" class="form-control" id="email" name="email" value="{{student.email}}">
                        <div class="form-text">Requerido.</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="username" class="form-label">Nombre de usuario</label>
                    <input type="text" class="form-control" id="username" name="username" value="{{student.username}}">
                </div>

                <div class="mb-3">
                    <label for="profileImg" class="form-label">Imagen</label>
                    <input type="url" class="form-control" id="profileImg" name="profileImg"
                        value="{{student.profileImg}}">
                    <div class="form-text">Introduce la URL a la imagen que desees de perfil.</div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Descripción</label>
                    <textarea class="form-control" id="description" rows="3"
                        name="description">{{student.description}}</textarea>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Editar</button>
                </div>
            </form>



        </div>
    </div>
</div>