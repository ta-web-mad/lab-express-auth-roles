<div class="container">
    <h2>{{username}} </h2>
    <hr>

    <div class="row justify-content-center">

        <div class="col-md-6">

            <form action="/students/:id/edit" method="POST">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input value='{{username}}' type="text" class="form-control" id="username" name="username">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input type="textarea"  value='{{description}}' class="form-control" id="description" name="description">
                   
                </div>
                <div class="form-group">
                    <label for="profileImg">URL Image</label>
                    <input type="text" value='{{profileImg}}' class="form-control" id="profileImg" name="profileImg">
                </div>
                
                <br>
                <button type="submit" class="btn btn-dark btn-block">Update</button>
            </form>
        </div>
    </div>


    <hr>
    <a href="/" class="btn btn-dark">Home</a>
</div>