<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Editar estudiante</h1>
            <hr>

            <form action="/students/edit/{{data.id}}" method="POST">

                <div class="mb-3 row">
                    <div class="col">
                        <label for="emailInput" class="form-label">Dirección de email</label>
                        <input type="email" class="form-control" id="emailInput" name="email" value="{{data.email}}">
                        <div class="form-text">Requerido.</div>
                    </div>

                </div>

                <div class="mb-3">
                    <label for="usernameInput" class="form-label">Nombre de usuario</label>
                    <input type="text" class="form-control" id="usernameInput" name="username"
                        value="{{data.username}}">
                </div>

                <div class="mb-3">
                    <label for="profileImg" class="form-label">Imagen</label>
                    <input type="url" class="form-control" id="profileImg" name="profileImg"
                        value="{{data.profileImg}}">

                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Descripción</label>
                    <input type="text" class="form-control" id="description" name="description"
                        value="{{data.description}}">
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Editar</button>
                </div>


            </form>
        </div>
    </div>

</div>