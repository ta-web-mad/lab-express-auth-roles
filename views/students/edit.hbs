<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Editar usuario</h1>
            <hr>

            <form action="/students/{{id}}/edit" method="POST">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control" id="username" name="username" value="{{username}}">
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" value="{{email}}">
                </div>

                <div class="mb-3">
                    <label for="profileImg" class="form-label">Profile Image</label>
                    <input type="url" class="form-control" id="profileImg" name="profileImg" value="{{profileImg}}">
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <input type="text" class="form-control" id="description" name="description" value="{{description}}">
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Editar</button>
                </div>
            </form>
        </div>
    </div>

</div>