{{#if isPM}}
  <div class="container">

    <div class="row justify-content-center">

      <div class="col-md-6">

        <h1>Edit the role of the student</h1>
        <hr />
        <form action="/students/changToTa/{{student._id}}" method="POST">
          <div class="mb-3">
            <label for="roleInput" class="form-label">Role of the student to
              develepor</label>
            <input
              type="text"
              class="form-control"
              id="roleInput"
              name="role"
              value="TA"
            />
          </div>

          <div class="d-grid gap-2">
            <button type="submit" class="btn btn-dark block">Confirm the
              modification</button>
          </div>

          {{#if errorMessage}}
            <div id="errorMessage">
              <p>{{errorMessage}}</p>
            </div>
          {{/if}}

        </form>
      </div>
    </div>

  </div>
{{/if}}