<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-8">

            <h1>EDIT STUDENT</h1>
            <hr>

            <form action="/student/{{id}}/edit" method="POST">
                <div class="mb-3 mt-5">
                    <label for="studentUsername" class="form-label">New username</label>
                    <input type="text" class="form-control" id="studentUsername" name="username" value="{{username}}">
                </div>

                <div class="mb-3">
                    <label for="studentImage" class="form-label">New avatar</label>
                    <input type="text" class="form-control" id="studentImage" name="profileImg" value="{{profileImg}}">
                </div>

                <div class="mb-3 ">
                    <label for="studentDesc" class="form-label">New description</label>
                    <input type="text" class="form-control" id="studentDesc" name="description" value="{{description}}">
                </div>

                <button type="submit" class="btn btn-dark">Update profile</button>
            </form>

        </div>
    </div>



</div>