            <h1 class="mt-3">{{student.username}}</h1>
            <hr>

            <div class="profPic">
                <img src="{{profileImg}}" alt="student pic">
            </div>
            <h3>
                email: {{student.email}}
            </h3>
            <h3>
                notes: {{student.description}}
            </h3>

