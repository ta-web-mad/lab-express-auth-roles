<div class="container">

    <h2 class="title">Info</h2>
    <hr>


    <div class="col-md-4 d-flex align-items-stretch">
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">{{student.username}}</h5>
                <img src="{{student.profileImg}}" class="card-img-top" alt="{{student.username}}">
                <p>{{student.email}}</p>
                <p>{{student.role}}</p>
                <p>{{student.description}}</p>
                {{#if isPM}}
                <a href="/edit/{{student._id}}" class="btn btn-warning btn-sm">Edit Student Profile</a>
                <br>
                <br>
                <form action="/delete/{{student._id}}" method="POST">
                    <input type="submit" value="Delete" class="btn btn-danger btn-sm">
                </form>
                <br>
                <form action="/markDev/{{student._id}}" method="POST">
                    <input type="submit" value="Mark as DEV" class="btn btn-warning btn-sm">
                </form>
                <br>
                <form action="/markTA/{{student._id}}" method="POST">
                    <input type="submit" value="Mark as TA" class="btn btn-warning btn-sm">
                </form>
                {{/if}}
            </div>
        </div>
    </div>



    <a href="/students" class="btn btn-dark">Students List</a>
    <a href="/staff" class="btn btn-dark">Staff List</a>

</div>