            <div class="btn-group">
                <a href="/alumnos/editar/{{student._id}}" class="btn btn-dark btn-sm">editar</a>

                <form action="/alumnos/eliminar/{{student._id}}" method="POST">
                    <button type="submit" class="btn btn-danger btn-sm">eliminar</button>
                </form>

                <form action="/alumnos/roles/{{student._id}}/TA" method="POST">
                    <button type="submit" class="btn btn-warning btn-sm">hacer TA</button>
                </form>

                <form action="/alumnos/roles/{{student._id}}/DEV" method="POST">
                    <button type="submit" class="btn btn-warning btn-sm">hacer DEV</button>
                </form>
            </div>
            {{/if}}

