{{#each users}}
<div class="card" style="width: 18rem;">
    <img class="card-img-top" src={{profileImg}} alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">{{username}}</h5>
        <p class="card-text">{{description}}</p>
        <a href="/students/{{_id}}">View profile</a>

    </div>
</div>

{{#if ../isPM}}
<form action="/students/delete" method="post">
    <input type="text" name="idStud" value={{_id}} hidden>
    <button type="submit">Delete</button>

</form>


{{/if}}
{{/each}}