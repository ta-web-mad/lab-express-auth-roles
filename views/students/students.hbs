{{#each user}}
<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="{{profileImg}}" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">{{username}}</h5>
                <p class="card-text">{{description}}</p>
                <p class="card-text"><small class="text-muted">{{timestamps}}</small></p>
                <a href="/students/{{id}}">Perfil</a>
                {{#if ../isPm}}
                <a href="/student/{{id}}/edit-student" class="btn btn-primary">Editar</a>

                <a href="/student/{{id}}/delete" class="btn btn-primary">Eliminar</a>
                <br>
                {{/if}}

            </div>
        </div>
    </div>
</div>
{{/each}}