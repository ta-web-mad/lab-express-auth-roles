<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Editar Usuario</h1>
            <hr>

            <form action="/students/{{details.id}}" method="POST">

                <div class="mb-3 row">
                    <div class="col">
                        <label for="emailInput" class="form-label">Dirección de email</label>
                        <input type="email" class="form-control" id="emailInput" name="email" value="{{details.id}}">
                        <div class="form-text">Requerido.</div>
                    </div>  
                </div>
                
                <div class="mb-3">
                    <label for="usernameInput" class="form-label">Nombre de usuario</label>
                    <input type="text" class="form-control" id="usernameInput" name="username" value="{{details.username}}">
                </div>
                
                <div class="mb-3">
                    <label for="imageInput" class="form-label">Imagen</label>
                    <input type="url" class="form-control" id="imageInput" name="profileImg" value="{{details.profileImg}}">
                    <div class="form-text">Introduce la URL a la imagen que desees de perfil.</div>
                </div>
                
                <div class="mb-3">
                  <label for="descriptionInput" class="form-label">Descripción</label>
                  <textarea class="form-control" id="descriptionInput" rows="3" name="description" value="{{details.description}}"></textarea>
                </div>

                {{#if isPM}}
                    <select class="form-select" aria-label="Default select example" name="role">
                        <option selected>Selecciona un rol</option>
                        <option value="STUDENT">STUDENT</option>
                        <option value="DEV">DEV</option>
                        <option value="TA">TA</option>
                    </select>
                {{/if}}

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Actualizar usuario</button>
                </div>
                
                {{#if errorMessage}}
                <div id="errorMessage">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}

            </form>
        </div>
    </div>

</div>
