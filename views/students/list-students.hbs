<div class="container">
    <h1>Students List</h1>
    <hr>
    <div class="container d-flex flex-wrap justify-content-center">
        {{#each user}}
        <div class="card m-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="{{profileImg}}" class="img-fluid rounded-start" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{username}}</h5>
                        <p class="card-text">{{description}}</p>
                        <p class="card-text"><small class="text-muted">{{email}}</small></p>
                        <div class="d-grid gap-2">
                            <a class="btn btn-dark" href="/students/{{_id}}" role="button">Info</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>