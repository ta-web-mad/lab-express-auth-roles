<div class="container">
    <div>
        <h1>Details {{user.username}}</h1>
        <hr>
        <li><b>Username:</b> {{user.username}}</li>
        <li><b>Name:</b>{{user.name}}</li>
        <li><b>Description:</b> {{user.description}}</li>
        <li><b>Role:</b>{{user.role}}</li>
    </div>
    <hr>
    {{#if isPM}}
    <div class="row text-center">
        <div class="col-3">
            <form action="/students/{{user.id}}/edit" method="GET">
                <button type="submit" class="btn btn-warning btn-lg">Edit</button>
            </form>
        </div>
        <div class="col-3">
            <form action="/students/{{user.id}}/delete" method="POST">
                <button type="submit" class="btn btn-danger btn-lg">Delete</button>
            </form>
        </div>
        <div class="col-3">
            <form action="/students/{{user.id}}/role-update?role=DEV" method="POST">
                <button type="submit" class="btn btn-dark btn-lg">Mark as Developer</button>
            </form>
        </div>
        <div class="col-3">
            <form action="/students/{{user.id}}/roles-update?role=TA" method="POST">
                <button type="submit" class="btn btn-dark btn-lg">Mark as TA</button>
            </form>
        </div>
        {{else}}
        {{#if idUser}}
        <div class="row text-center">
            <div class="col-3">
                <form action="/students/{{user.id}}/edit" method="GET">
                    <button type="submit" class="btn btn-warning btn-lg">Edit</button>
                </form>
            </div>
            <div class="col-3">
                <form action="/students/{{user.id}}/delete" method="POST">
                    <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                </form>
            </div>
        </div>
        {{/if}}
    {{/if}}
    </div>
</div>