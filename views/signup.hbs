<div class="container text-align-center">

    <h2>Log in</h2>

    <div class="row text-align-center">

        <form action="/signup" method="POST" class="col-10 col-md-8 col-lg-6 container-fluid">
            <div class="row gy-4 text-align-center justify-content-center container-fluid reset-margin">

                <div class="col-12 row g-0 text-align-left">
                    <label for="name-input" class="col-12">Username</label>
                    <input type="text" name='username' id="name-input" class="col-12" required>
                </div>

                <div class="col-12 row g-0 text-align-left">
                    <label for="password-input">Password</label>
                    <input type="password" name="password" id="password-input" class="col-12" required>
                </div>

                <button type="submit" class="col-12 btn btn-custom">Sign up</button>
            </div>
        </form>

        <p>Already registered? <a href="/login">Log in</a></p>

        {{#if errorMsg}}
        <p class="errorMsg">{{errorMsg}}</p>
        {{/if}}

    </div>
</div>