<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h2 class="mt-5"> Hi {{username}}</h2>
            <hr class="mt-5 mb-5">
            <h3 class="mb-5">Your Details</h3>
            <div class="row justify-content-center align-items-center">
                <div class="col-md-6">
                    <div class="row justify-content-center">
                        {{#if profileImg}}
                        <img src="{{profileImg}}" alt="{{username}}">
                        {{else}}
                        <img src="/images/Screenshot_20210818-152737_WhatsApp.jpg" width="100px" alt="{{name}}">
                        {{/if}}
                    </div>
                </div>
                <div class="col-md-6">
                     <ul class="list-group text-white">
                        <li class="list-group-item mb-3 bg-dark">
                            Username: {{user.username}}
                        </li>
                        <li class="list-group-item mb-3 bg-dark">

                            Name: {{user.name}}
                        </li>
                        <li class="list-group-item mb-3 bg-dark">
                            description: {{user.description}}

                        </li>
                    </ul>
                </div>
            </div>
            <hr class="mb-5 mt-5">
        </div>
    </div>
    <div class="row justify-content-center text-center">
        <a href="/my-profile/edit" class="btn btn-info mt-5">EDIT MY PROFILE</a>
    </div>
</div>