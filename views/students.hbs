<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-8">

            <h1>Listado de Estudiantes</h1>
            <hr>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Más Información</th>
                        {{!-- <th scope="col">XXXXX</th>
                        <th scope="col">XXXXX</th> --}}
                    </tr>
                </thead>
                <tbody>

                    {{#each users}}

                    <tr>
                        <td>{{username}}</td>
                        <td><a href="/students/{{_id}}" class="btn btn-dark btn-sm">Ver Perfil</a></td>
                    </tr>

                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>

    <hr>

    <a href="/" class="btn btn-dark">Volver a inicio</a>

</div>


