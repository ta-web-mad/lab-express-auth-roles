<div class="container">
	<div class="d-flex justify-content-between align-items-center">
		<h1 class="mb-0">Detalles de {{student.username}}</h1>
		<img src="{{student.profileImg}}" class="student-img img-fluid rounded-start" alt="student picture" />

	</div>
	{{#if isPM}}
		<p class="pb-1"><strong class="text-danger">Role:</strong> {{student.role}}</p>
	{{/if}}
	<p class="pb-3"><strong class="text-danger">Correo:</strong> {{student.email}}</p>

	<p class="ps-4 text-justify">{{student.description}}</p>

	<div class="mt-5">
		<a href="/students" class="btn btn-dark">Volver al listado</a>

		{{#if isPM}}
			<a href="/students/details/{{student._id}}/edit" class="btn btn-warning">Editar perfil</a>
			<form action="/students/{{student._id}}/delete" method="POST" style="display: inline">
				<input type="submit" value="Eliminar perfil" class="btn btn-danger" />
			</form>
		{{/if}}

		{{#if isTheStudent}}
			<a href="/students/details/{{student._id}}/edit" class="btn btn-warning">Editar mi perfil</a>
		{{/if}}

	</div>

	{{#if isPM}}
		<hr />
		<div class="mt-3">
			<form action="/students/{{student._id}}/promote-to-ta" method="POST" style="display: inline">
				<input type="submit" value="Hacer TA" class="btn btn-success" />
			</form>
			<form action="/students/{{student._id}}/promote-to-dev" method="POST" style="display: inline">
				<input type="submit" value="Hacer DEV" class="btn btn-success" />
			</form>
		</div>
	{{/if}}

</div>