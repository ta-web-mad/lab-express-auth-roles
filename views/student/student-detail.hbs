<div class="container">


  <div class="row">
    <div class="col-md-6">
     <img src={{student.profileImg}} alt="gato">
    </div>
    <div class="col-md-6">
      <h2>{{student.username}}</h2>

<p>{{student.role}}<p></p>
<hr />
      
      
      <ul>
        
        <li>{{student.email}}</li>
        <li>{{student.description}}</li>
<br>
    {{#unless isPM}}
        <a href="/estudiantes/detalles/{{student._id}}/editar">Editar mi perfil</a>
     {{/unless}}
      </ul>
    {{#if isPM}}
      <a href="/estudiantes/detalles/{{student._id}}/editar">Editar alumno</a>
      <br><br>
      <form action="/estudiantes/detalles/{{student._id}}/eliminar" method="POST">
      <button>Eliminar</button>
      </form>
          <br>
      <form action="/estudiantes/detalles/{{student._id}}/cambiarTA" method="POST">
      <button>Asignar rol TA</button>
      </form>
          <br>
      <form action="/estudiantes/detalles/{{student._id}}/cambiarDEV" method="POST">
      <button>Asignar rol DEV</button>
      </form>



      {{/if}}
    </div>

  </div>
</div>


