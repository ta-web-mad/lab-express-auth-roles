<div class="container">

    <h2>Detalles de {{username}}</h2>
    <hr>
    <div class="row">

        <div class="col-md-4">

            <form action="/estudiantes/{{id}}/editar" method="POST">
                <div class="form-group">
                    <label for="username">Nombre de usuario</label>
                    <input type="text" class="form-control" id="username" name="username" value="{{username}}">
                </div>
                <div class="form-group">
                    <label for="name">Nombre</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{name}}">
                </div>
                <div class="form-group">
                    <label for="description">Descripcion</label>
                    <input type="text" class="form-control" id="description" name="description" value="{{description}}">
                </div>
                <div class="form-group">
                    <label for="role">Rol</label>
                    <input type="text" class="form-control" id="role" name="role" value="{{role}}">
                </div>
                <a href="/estudiantes" class="btn btn-dark">Lista estudiantes</a>


            <button type="submit" class="btn btn-warning">Guardar los cambios</button>
        </form>

    </div>

    <hr>

</div>