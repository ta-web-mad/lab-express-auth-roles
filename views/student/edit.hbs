<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Actualizar</h1>
            <hr>

            <form action="/student/{{student._id}}/edit" method="POST">

                <div class="mb-3 row">
                    <div class="col">
                        <label for="emailInput" class="form-label">Dirección de email</label>
                        <input type="email" class="form-control" id="emailInput" name="email" value="{{student.email}}"
                            required>
                        <div class="form-text">Requerido.</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="usernameInput" class="form-label">Nombre de usuario</label>
                    <input type="text" class="form-control" id="usernameInput" name="username"
                        value="{{student.username}}" required>
                </div>

                <div class="mb-3">
                    <label for="imageInput" class="form-label">Imagen</label>
                    <input type="url" class="form-control" id="imageInput" name="profileImg"
                        value="{{student.profileImg}}" required>
                    <div class="form-text">Introduce la URL a la imagen que desees de perfil.</div>
                </div>

                <div class="mb-3">
                    <label for="descriptionInput" class="form-label">Descripción</label>
                    <textarea class="form-control" id="descriptionInput" rows="3" name="description"
                        required>{{student.description}}</textarea>
                </div>
                {{#if pm}}
                <div class="mb-3">
                    <label for="role" class="form-label">Role</label>
                    <select class="mb-3 form-select" name="role">
                        {{#if student.role}}
                        <option value="{{student.role}}" selected>{{student.role}}</option>
                        {{/if}}
                        {{#each rolesArray}}
                        <option value="{{this}}">{{this}}</option>
                        {{/each}}
                    </select>
                </div>
                {{/if}}
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Actualizar</button>
                </div>

                {{#if errorMessage}}
                <div id="errorMessage">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}

            </form>
        </div>
    </div>

</div>