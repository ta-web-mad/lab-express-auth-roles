<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Editar Estudiante</h1>
            <hr>

            <form action="/student/edit/{{_id}}" method="POST">

                <div class="mb-3 row">
                    <form action="/libros/crear" method="POST">
                        <div class="mb-3">
                            <label for="username" class="form-label">Usuario</label>
                            <input type="text" class="form-control" id="username" name="username" value="{{username}}">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="text" class="form-control" id="email" name="email" value="{{email}}">
                        </div>
                        <div class="mb-3">
                            <label for="profileImg" class="form-label">Imagen</label>
                            <input type="text" class="form-control" id="profileImg" name="profileImg"
                                value="{{profileImg}}">
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Descripci√≥n</label>
                            <input type="text" class="form-control" id="description" name="description"
                                value="{{description}}">
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-dark">Editar estudiante</button>
                        </div>

                    </form>




                    {{#if errorMessage}}
                    <div id="errorMessage">
                        <p>{{errorMessage}}</p>
                    </div>
                    {{/if}}

            </form>
        </div>
    </div>

</div>