<div class="container d-flex justify-content-center">
    <h1>Welcome! {{student.username}}</h1>
</div>
<div class="container d-flex justify-content-center">
    <div class="card" style="width: 18rem;">
        <img src="{{student.profileImg}}" class="card-img-top" alt="Profile Image">
        <div class="card-body">
            <h5 class="card-title">{{student.username}}</h5>
            <p class="card-text">{{student.description}}</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Email: {{student.email}}</li>
            <li class="list-group-item">Creation date: {{student.createdAt}}</li>
        </ul>
    </div>
</div>

{{#if userRoles.isThisUser}}

<div class="d-flex justify-content-center">
    <a class="btn btn-dark" href="/students/{{student._id}}/edit">Edit Profile</a>
</div>
{{/if}}

<div class="container">
    <div class="d-flex justify-content-between mt-2">

        {{#if userRoles.isPM}}

        <form action="/students/{{student._id}}/delete" method="post">
            <button class="btn btn-dark" type="submit">Delete Student</button>
        </form>

        <a class="btn btn-dark" href="/students/{{student._id}}/edit">Edit Student</a>

        <form action="/students/{{student._id}}/dev" method="post">
            <button class="btn btn-dark" type="submit">Mark as Developer</button>
        </form>

        <form action="/students/{{student._id}}/ta" method="post">
            <button class="btn btn-dark" type="submit">Mark as TA</button>
        </form>



        {{/if}}
    </div>
</div>