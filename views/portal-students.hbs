<div class="container">
    <div class="d-flex flex-column align-items-center justify-content-center pb-3">
        <h2 class="text-center pt-3 pb-2 fw-bolder">PORTAL STUDENTS</h2>
        {{!-- <a href="/celebrities/create" class="btn btn-primary p-2 fw-bolder" role="button">Add a new
            celebrities</a> --}}
    </div>
    <div class="d-flex flex-row justify-content-center px-3 pt-5">
        {{#each users}}
        <div class="card px-2 border-0" style="width: 18rem;">
            <img src="https://us.123rf.com/450wm/f8studio/f8studio2007/f8studio200700963/152075790-.jpg?ver=6"
                class="card-img-top" alt="..." />
            <div class="card-body">
                <h5 class="card-title">Name:{{username}}</h5>
                <a href="/students/{{_id}}/detail" class="btn btn-dark d-flex flex-column justify-content-center"
                    role="button">View Profile</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>