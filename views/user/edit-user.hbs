<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Edicion del perfil</h1>
            <hr>

            <form action="/perfil/editar" method="POST">

                <div class="mb-3">
                    <label for="emailInput" class="form-label">Dirección de email</label>
                    <input type="email" class="form-control" id="emailInput" name="email" value="{{user.email}}">
                </div>

                <div class="mb-3">
                    <label for="usernameInput" class="form-label">Nombre de usuario</label>
                    <input type="text" class="form-control" id="usernameInput" name="username"
                        value="{{user.username}}">
                </div>

                <div class="mb-3">
                    <label for="imageInput" class="form-label">Imagen</label>
                    <input type="url" class="form-control" id="imageInput" name="profileImg"
                        value="{{user.profileImg}}">
                </div>

                <div class="mb-3">
                    <label for="descriptionInput" class="form-label">Descripción</label>
                    <textarea class="form-control" id="descriptionInput" rows="3"
                        name="description">{{user.description}}</textarea>
                </div>

                {{#if rolePM}}

                <div class="mb-3">
                    <label for="roleInput" class="form-label">Rol</label>
                    <select class="form-select" id="roleInput" name="role">
                        <option value="{{user.role}}">Seleccionar...</option>
                        <option value="STUDENT">STUDENT</option>
                        <option value="DEV">DEV</option>
                        <option value="TA">TA</option>
                    </select>
                </div>

                {{/if}}

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Completar registro</button>
                </div>

                <input type="hidden" name="id" value="{{user.id}}">

                {{#if errorMessage}}
                <div id="errorMessage">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}

            </form>
        </div>
    </div>

</div>