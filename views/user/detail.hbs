<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="profile-img">
                <img src="{{student.profileImg}}" alt="Profile image" />
            </div>
        </div>
        <div class="col-md-6">
            <h5>{{student.username}}</h5>
            <h6>{{student.role}}</h6>
            <div>
                <div class="row">
                    <div class="col-md-6">
                        <label>Id</label>
                    </div>
                    <div class="col-md-6">
                        <p>{{student._id}}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label>Username</label>
                    </div>
                    <div class="col-md-6">
                        <p>{{student.username}}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label>Email</label>
                    </div>
                    <div class="col-md-6">
                        <p>{{student.email}}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label>Rol</label>
                    </div>
                    <div class="col-md-6">
                        <p>{{student.role}}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label>Descripcion</label>
                    </div>
                    <div class="col-md-6">
                        <p>{{student.description}}</p>
                    </div>
                </div>
            </div>
            {{#if isPmOrOwner}}
            <div class="row">
                <div class="col-md-6">
                    <a href="/alumnos/editar/{{student._id}}" class="btn btn-warning btn-sm">Editar</a>
                </div>
                {{#if isPm}}
                <div class="col-md-6">
                    <form action="/alumnos/eliminar/{{student._id}}" method="post">
                        <input type="submit" value="Eliminar" class="btn btn-danger btn-sm">
                    </form>
                </div>
                {{/if}}
            </div>
            {{/if}}
        </div>
    </div>
</div>