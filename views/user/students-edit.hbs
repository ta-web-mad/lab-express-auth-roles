<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Editar {{username}}</h1>
            <hr>

            <form action="/students/edit/{{id}}" method="POST">
                <div class="mb-3">
                    <label for="username" class="form-label">Name</label>
                    <input type="text" class="form-control" id="username" name="username" value="{{username}}">
                </div>



                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" value="{{email}}">
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Descripción</label>
                    <input type="text" class="form-control" id="description" name="description" value="{{description}}">
                </div>

                <div class="mb-3">
                    <label for="profileImg" class="form-label"> Image</label>
                    <input type="text" class="form-control" id="profileImg" name="profileImg" value="{{profileImg}}">
                </div>

                <input type="hidden" name="id" value="{{id}}">

                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-dark btn-lg">Guardar edición</button>
                </div>

            </form>
        </div>
    </div>
</div>