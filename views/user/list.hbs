<div class="container">
    <div class="row">
        {{#each students}}
        <div class="card" style="width: 18rem;">
            <img src="{{profileImg}}" class="card-img-top" alt="image">
            <div class="card-body">
                <h5 class="card-title">{{username}}</h5>
                <p class="card-text">{{email}}</p>
                <a href="/alumnos/detalles/{{_id}}" class="btn btn-primary">Ver alumno</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>