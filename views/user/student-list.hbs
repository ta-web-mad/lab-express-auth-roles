<div class="student-list">
    <div class="container">
        <h1>Listado de Estudiantes</h1>
        <hr>
        <div class="row">
            {{#each user}}
            <div class="col-md-3">
                <div class="card" style="width: 15rem;">
                    <img src={{profileImg}} class="card-img-top" alt="Card image">
                    <div class="card-body">
                        <p class="card-text">{{username}}</p>
                        <a href="/student-profile/{{_id}}" class="btn btn-sm btn-dark">Ver perfil</a>

                    </div>
                </div>
            </div>
            {{/each}}

        </div>
    </div>
</div>