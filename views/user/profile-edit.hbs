<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-8">

            <h1>Editar {{username}}</h1>

            <hr>

            <form action="/editar/{{_id}}" method="POST">

                <div class="mb-3">
                    <label for="field1" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="field1" name="username" value="{{username}}">
                </div>

                <div class="mb-3">
                    <label for="field2" class="form-label">Descripción</label>
                    <input type="text" class="form-control" id="field2" name="description" value="{{description}}">
                </div>

                <div class="mb-3">
                    <label for="field3" class="form-label">E-mail</label>
                    <input type="email" class="form-control" id="field2" name="email" value="{{email}}">
                </div>

                <input type="text" name="book_id" hidden value="{{_id}}">

                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Guardar edición</button>
                </div>
            </form>
        </div>
    </div>

</div>