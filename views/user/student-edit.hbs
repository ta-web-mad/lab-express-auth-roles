<form action="/students/{{student._id}}/edit" method="POST">

    <div class="mb-3 row">
        <div class="col">
            <label for="emailInput" class="form-label">Dirección de email</label>
            <input type="email" class="form-control" id="emailInput" name="email" value="{{student.email}}">
            <div class="form-text">Requerido.</div>
        </div>
        <div class="mb-3">
            <label for="usernameInput" class="form-label">Nombre de usuario</label>
            <input type="text" class="form-control" id="usernameInput" name="username" value="{{student.username}}">
        </div>

        <div class="mb-3">
            <label for="imageInput" class="form-label">Imagen</label>
            <input type="url" class="form-control" id="imageInput" name="profileImg" value="{{student.profileImg}}">
            <div class="form-text">Introduce la URL a la imagen que desees de perfil.</div>
        </div>

        <div class="mb-3">
            <label for="descriptionInput" class="form-label">Descripción</label>
            <textarea class="form-control" id="descriptionInput" rows="3"
                name="description">{{student.description}}</textarea>
        </div>
        {{#if errorMessage}}
        <div id="errorMessage">
            <p>{{errorMessage}}</p>
        </div>
        {{/if}}
        <div class="row justify-content-center text-center">
            <div class="col-4">
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Confirm Edit</button>
                </div>
            </div>
            <div class="col-4">
                <a class="btn btn-dark d-grid" href="/students/{{student._id}}">Cancel</a>
            </div>
        </div>




    </div>



</form>