<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Edición</h1>

            <hr>

            <form action="/editar?user_id={{user_id}}" method="POST">

                <div class="form-group">
                    <label for="name">Nombres y apellidos</label>
                    <input type="text" class="form-control" name="name" id="name" value="{{name}}">
                </div>
                <div class="form-group">
                    <label for="description">Cuentanos una breve descripción sobre ti</label>
                    <textarea class="form-control" name="description" id="description"
                        placeholder="{{description}}"></textarea>
                </div>

                <div class="form-group">
                    <label for="profileImg">URL imagen de perfil</label>
                    <input type="text" class="form-control" name="profileImg" id="profileImg" value="{{profileImg}}">
                </div>



                <button type="submit" class="btn btn-outline-dark btn-block btn-lg">Actualizar</button>

            </form>
            {{#if errorMessage}}
            <div
                style="margin-top: 20px; padding: 5px; color: white; background: red; text-align: center; font-size: .95em">
                {{errorMessage}}</div>
            {{/if}}
        </div>

    </div>

</div>