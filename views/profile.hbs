<div class="container">

    {{#each user}}

    <h1>Perfil de {{username}}</h1>
    <hr>
    <p>Foto de perfil: {{profileImg}}</p>
    <hr>
    <p>Descipcion: {{description}}</p>
    <hr>

    {{/each}}


    {{#if userIsAdmin}}
    <p>Role:</p>
    <select name="select">
        <option value='role'>{{role}}</option>
        {{!-- <option value="value2">DEV</option>
        <option value="value3">TA</option>
        <option value="value3">PM</option> --}}
    </select>
    <hr>

    <a href="/delete/{{_id}}" class="btn btn-dark">Eliminar usuario</a>
    <a href="/edit/{{_id}}" class="btn btn-dark">Editar usuario</a>
    {{/if}}

    <a href="/students" class="btn btn-dark">Volver al listado</a>

</div>