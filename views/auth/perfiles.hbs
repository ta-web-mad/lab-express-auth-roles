<div class="container">

    <h1>Detalles de {{user.username}}</h1>

    <hr>

    <p><strong> Profile image:</strong> </p><img src="{{user.profileImg}}">
    <p><strong>email:</strong> {{user.email}} </p>
    <p><strong>description:</strong> {{user.description}}</p>



    <hr>
    {{#if isPM}}

    <a href="/students/{{user.id}}/editar" class="btn btn-primary">Editar</a>
    <form action="/students/{{user.id}}/eliminar" method="POST">
        <button class="btn btn-sm btn-warning" type="submit">Eliminar</button>
    </form>

    {{/if}}

    <a href="/students" class="btn btn-dark">Volver al listado</a>




</div>