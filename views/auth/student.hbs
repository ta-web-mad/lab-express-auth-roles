<div class="container">
    <div class="row">
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src={{student.profileImg}} class="card-img mt-3" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{student.username}}</h5>
                        <h6 class="card-title">{{student.email}}</h6>
                        <p class="card-text">Description: {{student.description}}</p>
                        <p class="card-text"><small class="text-muted">Role: {{student.role}}</small></p>
                    </div>
                </div>
            </div>
        </div>
        {{#if isStudent}}
        <div class="col-2">
            <a href="/student/{{student._id}}/edit" class="btn btn-primary">Update Student</a>
        </div>
        {{/if}}
        {{#if isPm}}
        <div class="col-2">
            <a href="/student/{{student.id}}/edit" class="btn btn-primary">Update Student</a>
            <form action="/student/{{id}}/delete" method="POST">
                <button class="btn btn-danger mt-3" type="submit">Delete Student</button>
            </form>
        </div>
        {{/if}}
    </div>
</div>