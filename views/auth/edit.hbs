<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Edit {{username}}</h1>

            <hr>

            <form action="students/{{id}}/editar" method="POST">
                <div class="mb-3">
                    <label for="tit" class="form-label">Título</label>
                    <input type="text" class="form-control" id="tit" name="title" value="{{username}}">
                </div>

                <div class="mb-3">
                    <label for="aut" class="form-label">Autor</label>
                    <input type="text" class="form-control" id="aut" name="author" value="{{password}}">
                </div>

                <div class="mb-3">
                    <label for="desc" class="form-label">Descripción</label>
                    <input type="text" class="form-control" id="desc" name="description" value="{{description}}">
                </div>

                <div class="mb-3">
                    <label for="rat" class="form-label">Puntuación</label>
                    <input type="text" class="form-control" id="rat" name="rating" value="{{profileImg}}">
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Edit student</button>
                </div>
            </form>

        </div>
    </div>
</div>