<div class="row">
    <div class="col col-6 offset-3">
        <h2 >Sign in form:</h2>
        {{#if errorMessage}}
        <div
            style="margin-top: 20px; padding: 5px; color: white; background: red; text-align: center; font-size: .95em">
            {{errorMessage}}</div>
        {{/if}}

        <form action="/login" method="POST">
        <div class="mb-3">
            <label class="form-label" for="username">Username</label>
            <input class="form-control" type="text" id="username" name="username">
        </div>
        <div class="mb-3">
            <label class="form-label" for="pwd">Password</label>
            <input class="form-control" type="text" id="pwd" name="pwd">
        </div>

        <div class="mb-3">
            <button class="btn btn-success btn-block col-4 offset-4">Sign In</button>
        </div>
        
    
    </form>
    {{!-- <div class="mb-3">
        <a class="btn btn-info" href="/">Home</a>
    </div> --}}


</div>
