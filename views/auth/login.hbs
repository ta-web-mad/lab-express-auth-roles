<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Please log in</h1>
            <hr>

            <form action="/iniciar-sesion" method="POST">
                <div class="mb-3">
                    <label for="emailInput" class="form-label">Your email</label>
                    <input type="email" class="form-control" id="emailInput" name="email">
                </div>

                <div class="mb-3">
                    <label for="pwdInput" class="form-label">Password</label>
                    <input type="password" class="form-control" id="pwdInput" name="userPwd">
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Go!</button>
                </div>

                {{#if errorMessage}}
                <div id="errorMessage">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}

            </form>
        </div>
    </div>

</div>