<div class="container">

    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="{{user.profileImg}}" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">{{user.username}}</h5>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Description: {{user.description}}</li>
            <li class="list-group-item">Role: {{user.role}}</li>
        </ul>
        <div class="card-body">

            <a href="/students/edit/{{user._id}}" class="card-link">EDIT</a>

        </div>
    </div>


</div>