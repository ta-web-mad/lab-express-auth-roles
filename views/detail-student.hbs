{{!-- <div class="d-flex flex-row justify-content-center px-3 pt-5"> --}}
    <div class="container">
        <div class="d-flex justify-content-center pb-5">
            <h1 class="fw-bold">PROFILE STUDENT</h1>
        </div>
        <div class="d-flex justify-content-center">
            <div class="card" style="width: 26rem;">
                <img src="https://us.123rf.com/450wm/f8studio/f8studio2007/f8studio200700963/152075790-.jpg?ver=6"
                    class="card-img-top" alt="..." />
                <div class="card-body d-flex flex-column">
                    <p class="fw-bold fs-5">Name:</p>
                    {{user.username}}
                    <hr>
                    <p class="fw-bold fs-5">Role:</p>
                    {{user.role}}
                    <hr>
                    <p class="fw-bold fs-5">Email:</p>
                    {{user.email}}
                    <hr>
                    <p class="fw-bold fs-5">Description:</p>
                    {{user.description}}
                    {{#if isSameUser}}
                    <div class="d-flex w-100 mt-3 ">
                        <a href="/students/{{user._id}}/edit" class="btn btn-warning w-50 me-3" role="button">Edit
                            Student</a>
                    </div>
                    {{/if}}
                    {{#if isAdmin}}
                    <div class="d-flex w-100 mt-3 ">
                        <a href="/students/{{user._id}}/edit" class="btn btn-warning w-50 me-3" role="button">Edit
                            Student</a>
                        <form action="/students/{{user._id}}/delete" method="POST" class="w-50">
                            <button class="btn btn-danger w-100">Delete Student</button>
                        </form>
                    </div>
                    {{/if}}

                </div>
            </div>
        </div>
    </div>
</div>