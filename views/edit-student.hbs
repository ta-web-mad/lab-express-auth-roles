    <div class="container">
        <div class="d-flex justify-content-center pb-5">
            <h1 class="fw-bold">PROFILE STUDENT</h1>
        </div>
        <div class="d-flex justify-content-center">
            <form action="/students/{{user._id}}/edit" method="POST" class="card" style="width: 26rem;">
                <img src="https://us.123rf.com/450wm/f8studio/f8studio2007/f8studio200700963/152075790-.jpg?ver=6"
                    class="card-img-top" alt="..." />
                <div class="card-body d-flex flex-column">
                    <label class="fw-bold fs-5">Name:</label>
                    <input class="border-top-0 border-end-0 border-start-0 my-2 py-2" type="text" name="username"
                        value="{{user.username}}">
                    <label class="fw-bold fs-5">Role:</label>
                    {{#if isAdmin}}
                    <select class="border-top-0 border-end-0 border-start-0 my-2 py-2" name="role" id="">
                        {{#each roles}}
                        {{#if selected}}
                        <option selected type="text" name="role" value="{{name}}">{{name}}</option>
                        {{else}}
                        <option type="text" name="role" value="{{name}}">{{name}}</option>
                        {{/if}}
                        {{/each}}
                    </select>
                    {{/if}}
                    <label class="fw-bold fs-5">Email:</label>
                    <input class="border-top-0 border-end-0 border-start-0 my-2 py-2" type="text" name="email"
                        value="{{user.email}}">
                    <label class="fw-bold fs-5">Description:</label>
                    <textarea class="border-top-0 border-end-0 border-start-0 my-2 py-2" type="text" name="description">
                        {{user.description}}
                    </textarea>
                    <button class="btn btn-success mt-4" type="submit" role="button">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>