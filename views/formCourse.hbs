<div class="container">

  <div class="row justify-content-center">

    <div class="col-md-6">

      <h1>Nuevo curso</h1>
      <hr />

      <form action="/courses/create" method="POST">

        <div class="mb-3 row">
          <div class="col">
            <label for="courseLabel" class="form-label">Nombre del curso</label>
            <input
              type="string"
              class="form-control"
              id="courseLabel"
              name="title"
            />
            <div class="form-text">Requerido.</div>
          </div>
          <div class="col">
            <label for="userInput" class="form-label">Profesor</label>
            <select name="user">
              {{#each users}}
                <option value="{{_id}}">{{username}}</option>
              {{/each}}
            </select>
            <div class="form-text">Requerido.</div>
          </div>
        </div>

        <div class="mb-3 row">
          <div class="col">
            <label for="courseLabel" class="form-label">Nombre del curso</label>
            <input
              type="string"
              class="form-control"
              id="courseLabel"
              name="title"
            />
            <div class="form-text">Requerido.</div>
          </div>
          <div class="col">
            <label for="userInput" class="form-label">Usuario</label>
            <select name="user">
              {{#each users}}
                <option value="{{_id}}">{{username}}</option>
              {{/each}}
            </select>
            <div class="form-text">Requerido.</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="imageInput" class="form-label">Imagen</label>
          <input
            type="url"
            class="form-control"
            id="imageInput"
            name="profileImg"
          />
          <div class="form-text">Introduce la URL a la imagen que desees de
            perfil.</div>
        </div>

        <div class="mb-3">
          <label for="descriptionInput" class="form-label">Descripci√≥n</label>
          <textarea
            class="form-control"
            id="descriptionInput"
            rows="3"
            name="description"
          ></textarea>
        </div>

        <div class="d-grid gap-2">
          <button type="submit" class="btn btn-dark block">Completar registro</button>
        </div>

        {{#if errorMessage}}
          <div id="errorMessage">
            <p>{{errorMessage}}</p>
          </div>
        {{/if}}

      </form>
    </div>
  </div>

</div>