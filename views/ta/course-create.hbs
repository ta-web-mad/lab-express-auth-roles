<div class="row">
    <div class="col col-6 offset-3">
        <h2 >Create course:</h2>
        {{#if errorMessage}}
        <div
            style="margin-top: 20px; padding: 5px; color: white; background: red; text-align: center; font-size: .95em">
            {{errorMessage}}</div>
        {{/if}}

        <form action="/ta/course/new" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="title">
            </div>

            <div class="mb-3">
                <button class="btn btn-success btn-block col-4 offset-4">Sign In</button>
            </div>
                
        </form>

</div>