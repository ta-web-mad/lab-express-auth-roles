<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Nuevo Curso</h1>
            <hr>

            <form action="/course/create" method="POST">

                <div class="mb-3 row">
                    <div class="col">
                        <label for="title" class="form-label">Title</label>
                        <input type="title" class="form-control" id="title" name="title">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="leadTeacher" class="form-label">Lead teacher</label>
                    <select class="form-select" name="leadTeacher" id="leadTeacher">
                        {{#each leadTeacher}}
                        <option value="{{id}}">{{username}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="mb-3">
                    <label for="startDate" class="form-label">Starts</label>
                    <input type="date" class="form-control" id="startDate" name="startDate">
                </div>
                <div class="mb-3">
                    <label for="endDate" class="form-label">Ends</label>
                    <input type="date" class="form-control" id="endDate" name="endDate">
                </div>
                <div class="mb-3">
                    <label for="ta" class="form-label">Teacher assitants</label>
                    <select multiple class="form-select" name="ta" id="ta">
                        {{#each ta}}
                        <option value="{{id}}">{{username}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="mb-3">
                    <label for="courseImg" class="form-label">Image</label>
                    <input type="url" class="form-control" id="courseImg" name="courseImg">
                </div>
                <div class="mb-3">
                    <label for="descriptionInput" class="form-label">Description</label>
                    <textarea class="form-control" id="descriptionInput" rows="3" name="description"></textarea>
                </div>

                <div class="mb-3">
                    <label for="status" class="form-label">Status</label>
                    <select class="form-select" name="status" id="status">
                        <option value="ON">ON</option>
                        <option value="OFF">OFF</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="students" class="form-label">Students</label>
                    <select multiple class="form-select" name="students" id="students">
                        {{#each student}}
                        <option value="{{id}}">{{username}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="d-grid gap-2 mb-5">
                    <button type="submit" class="btn btn-dark block">Completar registro</button>
                </div>

                {{#if errorMessage}}
                <div id="errorMessage">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}

            </form>
        </div>
    </div>

</div>