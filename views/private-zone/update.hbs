<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Editar perfil</h1>
            <hr>

            <form action="/estudiantes/{{studentId.id}}/editar" method="POST">

                <div class="mb-3 row">
                    <div class="col">
                        <label for="email" class="form-label">Dirección de email</label>
                        <input type="email" class="form-control" id="email" name="email" value="{{studentId.email}}">
                    </div>
                </div>

                <div class="mb-3">
                    <label for="username" class="form-label">Nombre de usuario</label>
                    <input type="text" class="form-control" id="username" name="username"
                        value="{{studentId.username}}">
                </div>

                <div class="mb-3">
                    {{#if isCheckPM}}
                    <label for="role" class="form-label">Editar permiso</label>
                    <input type="text" class="form-control" id="role" name="role" value="{{studentId.role}}">
                    <select name="cast" id="cast" multiple>
                        {{#each studentId.enum.role}}
                        <option value="{{studentId.enum.role}}">{{studentId.enum.role}}</option>
                        {{/each}}
                    </select>
                    {{/if}}
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Descripción</label>
                    <textarea class="form-control" id="description" rows="3" name="description"
                        value="{{studentId.description}}"></textarea>
                </div>



                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Guardar edición</button>
                </div>

            </form>
        </div>
    </div>

</div>