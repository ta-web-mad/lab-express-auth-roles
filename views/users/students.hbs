<div class="container">
    <h1>Welcome {{user.username}}</h1>
    <hr>
    <div class="row">
        {{#each students}}
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card">
                    <div class="card-body">
                        <img src="{{profileImg}}">
                        <h5 class="card-title">
                            {{username}}
                        </h5>
                        <p>
                            {{email}}
                        </p>
                        <p>
                            {{description}}
                        </p>
                        <a href="/students/{{_id}}">See me!</a> <br><br>
                    </div>
                </div>
            </div>
        {{/each}}
        {{#if isPM}}
            <a class="btn btn-primary" href="/students/{{_id}}/edit">Edit</a><br><br>
            <form action="/students/{{_id}}/delete" method="POST">
                <button class="btn btn-dark">Delete</button>
            </form>
        {{/if}}
    </div>
    <hr>
</div>