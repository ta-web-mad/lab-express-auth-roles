<div class="container">
    <h1>Enrolled students</h1>
    <hr class="mb-3">

    {{#each users}}
    <div class="row mb-3">
        {{username}}
        <a href="/students/{{_id}}" class="btn btn-sm btn-info custom-button">View student profile</a>

        {{#if this.canEdit}}
        <a href="/students/edit/{{_id}}" class="btn btn-sm btn-outline-danger custom-button edit-button">Edit</a>
        {{/if}}

        {{#if ../userRole.isPM}}
        <form action="/students/delete/{{_id}}" method="POST" style="display: inline">
            <input type="submit" value="DELETE" class="btn btn-sm btn-danger custom-button delete-button">
        </form>
        {{/if}}

    </div>
    {{/each}}

</div>